include ../includes/_mixins
block popups

    // ПОПАП "ОСТАВИТЬ ЗАЯВКУ"
    #popup-request.popup
        .popup__inner
            .popup__main
                .popup__title Давайте сотрудничать?
                form
                    .popup__request-form
                        .popup__inputs
                            .popup__input.input
                                input(type='text' placeholder='Ваше имя')
                            .popup__input.input.phone-mask
                                input(type='text' placeholder='+7 (999) 999-99-99')
                        .popup__checkbox.checkbox
                            label Я соглашаюсь с условиями политики конфиденциальности
                                input(type='checkbox')
                                span
                        button(type='button').btn оставить заявку
            .popup__image
                +img('popup-image.png')


    // ПОПАП "УСПЕШНО - ОБРАТНЫЙ ЗВОНОК"
    #popup-success-request.popup.popup-success
        .popup__title Ваша заявка успешно отправлена
        .popup__subtitle Наши менеджеры свяжутся с вами в ближайшее время
        .popup-actions
            a(href='/').btn.btn-orange.btn-with-arrow Вернуться на главную